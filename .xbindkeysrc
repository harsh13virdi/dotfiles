"xbindkeys_show" 
  control+shift + q

"maim ~/screenshots/screenshot-"`date`".png"
  m:0x8 + c:67

"volctl up"
  m:0x0 + c:123

"volctl down"
  m:0x0 + c:122

"volctl toggle"
  m:0x0 + c:121

"st ranger"
  control+shift + r

"blender"
  control+shift + b

"st vim"
  control+mod1 + v
  
"firefox"
  control+mod1 + b

"st htop"
  control+shift + Escape

"st fuzzyopen"
  m:0x0 + c:225

"slock"
  mod4 + Escape

"discord"
  control+mod1 + d

"st calcurse"
  control+mod1 + c

"st aerc"
  control+mod1 + m

"mutemic"
  m:0x0 + c:198

